---
import Button from "@components/UI/Button.astro";
import socialLinks from "@/content/socialLinks";

export interface Props {
  title: string;
  subtitle: string;
  backgroundImage?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
}

const {
  title = "Titulo prueba",
  subtitle = "Descripcion prueba",
  backgroundImage = "/uploads/tierna.webp",
  ctaText = "Ãšnete",
  ctaLink = "/im-new"
} = Astro.props;



---

<section
  class="relative min-h-[70vh] flex items-center bg-cover"
  style={`background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(${backgroundImage}); background-position: center 20%;`}
>

  <div class="container">
    <div class="max-w-3xl text-white">
      
      <h1 class="text-4xl md:text-6xl font-bold mb-4 text-white">{title}</h1>
      <p class="text-xl md:text-2xl mb-8">{subtitle}</p>
      
      <div class="flex flex-col gap-4">
        <Button href={ctaLink} variant="primary" size="lg">
          {ctaText}
        </Button>
        <div class="flex gap-7 m-3">
          {
          socialLinks.map((i) => (
            <a href={i.href} class="">
              <div set:html={i.icon} ></div> <!-- FIXME -->
            </a>
          ))
          }

        </div>
      </div>
    </div>
  </div>
</section>