---
const {titulo, descripcion, link} = Astro.props;
---


<div class="bg-white p-8 rounded-lg shadow-sm m-">
  <h3 class="text-xl font-bold mb-3">{titulo}</h3>
  <p class="text-gray-700 mb-4 whitespace-pre-line">{descripcion}</p>

  {link !== "" 
    ? <a href={link} class="text-primary-600 font-medium hover:text-primary-700">Más información →</a> 
    : null
  }

  
</div>